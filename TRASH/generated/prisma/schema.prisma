generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_MONGO")
}

model Products {
  id    String @id @default(uuid()) @map("_id")
  name  String
  desc  String
  price String
  image String
  qtd   Int

  createdAt DateTime @default(now())
}

model Users {
  id       String @id @default(uuid()) @map("_id")
  name     String
  email    String
  password String

  createdAt DateTime @default(now())
}
